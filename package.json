{
  "name": "winter-arc-app",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "cross-env EXPO_PUBLIC_URL=https://wilddragonking.github.io/winter-arc-app expo export --platform web && cross-env EXPO_PUBLIC_URL=https://wilddragonking.github.io/winter-arc-app node scripts/post-export.cjs dist",
    "build:preview": "expo export --platform web && node scripts/prepare-preview.cjs",
    "preview": "npm run build:preview && npx http-server preview -p 8080 -o /winter-arc-app",
    "preview:screenshot": "playwright test --config=playwright.preview.config.ts",
    "deploy": "npm run build:web",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "web:test": "expo start --web --port 8081",
    "test:visual": "playwright test",
    "test:visual:ui": "playwright test --ui",
    "test:visual:headed": "playwright test --headed",
    "test:visual:update": "playwright test --update-snapshots",
    "prepare": "husky"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@firebase/app-check": "^0.11.0",
    "@react-navigation/bottom-tabs": "^7.4.7",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/stack": "^7.4.8",
    "@react-oauth/google": "^0.12.2",
    "expo": "~54.0.10",
    "expo-blur": "^15.0.7",
    "expo-linear-gradient": "^15.0.7",
    "expo-notifications": "^0.32.11",
    "expo-status-bar": "~3.0.8",
    "firebase": "^12.3.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-expo": "^54.0.12",
    "lint-staged": "^16.2.3",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "private": true
}
