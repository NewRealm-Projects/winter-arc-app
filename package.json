{
  "name": "winter-arc-tracker",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:1p": "op run --env-file=.env.local -- npm run dev",
    "1p:setup": "echo 'Use op signin --account my.1password.com'",
    "build": "next build",
    "start": "next start",
    "dev:1p-prod": "op run --env-file=.env.1password.production -- npm run dev",
    "dev:1p-staging": "op run --env-file=.env.1password.staging -- npm run dev",
    "build:1p-prod": "op run --env-file=.env.1password.production -- npm run build",
    "build:1p-staging": "op run --env-file=.env.1password.staging -- npm run build",
    "preview": "npm run start",
    "lint": "next lint && npm run lint:secrets",
    "lint:code": "next lint",
    "lint:secrets": "node scripts/check-secrets.mjs",
    "format": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:all": "npm run typecheck && npm run lint && npm run test:unit",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "e2e:ui": "playwright test --config e2e/playwright.config.ts --ui",
    "analyze": "vite build && npx rollup-plugin-visualizer stats.html --open",
    "perf:budget": "node scripts/check-budgets.mjs",
    "db:setup": "node scripts/setup-neon.mjs",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "lhci:upload": "lhci upload",
    "lhci:run": "npm run build && npm run preview -- --port 4173 & sleep 3 && lhci autorun && kill $!",
    "agent:lighthouse": "node .agent/scripts/run-lighthouse.mjs",
    "agent:bundle": "node .agent/scripts/bundle-report.mjs",
    "agent:artifacts": "node .agent/scripts/prepare-artifacts.mjs",
    "clean": "node scripts/cleanup-repo.mjs",
    "clean:dry-run": "node scripts/cleanup-repo.mjs --dry-run",
    "check:consistency": "node scripts/consistency-check.mjs",
    "check:consistency:fix": "node scripts/consistency-check.mjs --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.1",
    "@neondatabase/serverless": "^1.0.2",
    "@sentry/react": "10.18.0",
    "@vercel/speed-insights": "^1.2.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.2.1",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "eslint-config-next": "^16.0.1",
    "firebase": "^12.3.0",
    "lucide-react": "^0.545.0",
    "next": "^16.0.1",
    "next-auth": "^4.24.13",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.2.1",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@lhci/cli": "0.15.1",
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "depcheck": "^1.4.7",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-unused-imports": "^4.2.0",
    "firebase-admin": "^13.5.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "knip": "^5.64.2",
    "openspec": "^0.0.0",
    "postcss": "^8.4.49",
    "react-swipeable": "^7.0.2",
    "rollup-plugin-visualizer": "^6.0.4",
    "tailwindcss": "^3.4.17",
    "task-master-ai": "^0.30.2",
    "ts-prune": "^0.10.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0",
    "wait-on": "^9.0.1",
    "workbox-window": "^7.3.0"
  },
  "overrides": {
    "tmp": "^0.2.5"
  }
}
