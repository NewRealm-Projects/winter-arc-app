#!/usr/bin/env sh

# ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
# Pre-push Hook: Branch Name Validation (First Check)
# ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo "${BLUE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
echo "${BLUE}üîç Validating branch name...${NC}"

# Get current branch name
BRANCH_NAME=$(git symbolic-ref --short HEAD 2>/dev/null)

if [ -z "$BRANCH_NAME" ]; then
  echo "${RED}‚ùå Could not determine current branch${NC}"
  exit 1
fi

echo "Branch: ${YELLOW}$BRANCH_NAME${NC}"

# Protected branches - always allow
if echo "$BRANCH_NAME" | grep -Eq "^(main|develop)$"; then
  echo "${GREEN}‚úÖ Protected branch - validation passed${NC}"
else
  # Valid branch pattern: <username>/<type>-<description>
  VALID_TYPES="feature|fix|chore|refactor|docs|test|style"
  BRANCH_PATTERN="^[a-z0-9_-]+/($VALID_TYPES)-[a-z0-9_-]+$"

  if echo "$BRANCH_NAME" | grep -Eq "$BRANCH_PATTERN"; then
    echo "${GREEN}‚úÖ Valid branch name format${NC}"
  else
    echo ""
    echo "${RED}‚ùå Invalid branch name format!${NC}"
    echo ""
    echo "Branch names must follow this pattern:"
    echo "  ${YELLOW}<username>/<type>-<description>${NC}"
    echo ""
    echo "Valid types: ${GREEN}feature, fix, chore, refactor, docs, test, style${NC}"
    echo ""
    echo "Examples:"
    echo "  ${GREEN}‚úì${NC} lars/feature-dashboard"
    echo "  ${GREEN}‚úì${NC} niklas/chore-cleanup"
    echo "  ${GREEN}‚úì${NC} daniel/fix-login-bug"
    echo ""
    echo "${YELLOW}üí° To rename your branch:${NC}"
    echo "  ${BLUE}git branch -m <username>/<type>-<description>${NC}"
    echo ""
    echo "${BLUE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
    exit 1
  fi
fi

echo "${BLUE}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"
echo ""

# ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
# Code Quality Checks
# ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ

echo "üîç Running pre-push checks..."
echo ""

# 1. TypeScript type checking
echo "üìò TypeScript type checking..."
if ! npm run typecheck 2>&1 | grep -v "^$"; then
  echo "‚ùå TypeScript errors found. Push aborted."
  exit 1
fi

# 2. ESLint
echo ""
echo "üîç Running ESLint..."
if ! npm run lint 2>&1 | grep -E "(error|warning)" | grep -v "warnings potentially fixable"; then
  echo "‚ùå ESLint errors found. Push aborted."
  exit 1
fi

# 3. Unit tests (ignore stderr warnings, check exit code only)
echo ""
echo "üß™ Running unit tests..."
# Capture exit code, but allow stderr (for act() warnings)
npm run test:unit > /tmp/test-output.log 2>&1
TEST_EXIT_CODE=$?

if [ $TEST_EXIT_CODE -ne 0 ]; then
  echo "‚ùå Unit tests failed. Push aborted."
  cat /tmp/test-output.log
  rm -f /tmp/test-output.log
  exit 1
fi

# Check for actual test failures in output
if grep -q "FAIL" /tmp/test-output.log; then
  echo "‚ùå Unit tests failed. Push aborted."
  cat /tmp/test-output.log
  rm -f /tmp/test-output.log
  exit 1
fi

# Show test summary
grep -E "(Test Files|Tests|Coverage)" /tmp/test-output.log | tail -3
rm -f /tmp/test-output.log

# 4. Build test (ensures code compiles)
echo ""
echo "üèóÔ∏è  Testing production build..."
if ! npm run build > /tmp/build-output.log 2>&1; then
  echo "‚ùå Build failed. Push aborted."
  cat /tmp/build-output.log
  rm -f /tmp/build-output.log
  exit 1
fi

echo "‚úÖ Build successful"
rm -f /tmp/build-output.log

echo ""
echo "‚úÖ All pre-push checks passed!"
echo ""
