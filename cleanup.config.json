{
  "protectedGlobs": [
    "README.md",
    "LICENSE",
    "CHANGELOG*",
    "SECURITY.md",
    "CLAUDE.md",
    ".agent/**",
    ".github/**",
    ".gitlab/**",
    ".devcontainer/**",
    ".vscode/**",
    "docs/policies/**",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md",
    "package.json",
    "package-lock.json",
    "tsconfig.json",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.js",
    ".env*",
    "firebase.json",
    "firestore.rules",
    "firestore.indexes.json",
    ".husky/**",
    ".lighthouserc.json",
    "playwright.config.ts",
    "vitest.config.ts"
  ],
  "assetRoots": [
    "public",
    "src/assets",
    "docs/img",
    "docs/assets"
  ],
  "docRoots": [
    "docs",
    "."
  ],
  "optimizeImages": true,
  "optimizeLosslessOnly": true,
  "minConfidenceToDelete": 0.92,
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    ".git/**",
    "*.log",
    ".DS_Store"
  ],
  "dynamicImportPatterns": [
    "import.meta.glob",
    "require.context",
    "dynamic import",
    "loadable"
  ],
  "aggressive": {
    "minConfidenceToDelete": 0.85,
    "optimizeLosslessOnly": false,
    "maxAgeMonths": 18
  }
}
