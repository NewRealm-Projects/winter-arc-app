# Vercel Postgres Database
POSTGRES_URL=""
POSTGRES_PRISMA_URL=""
POSTGRES_URL_NO_SSL=""
POSTGRES_URL_NON_POOLING=""
POSTGRES_USER=""
POSTGRES_HOST=""
POSTGRES_PASSWORD=""
POSTGRES_DATABASE=""

# Google OAuth (replacing Firebase Auth)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Next.js Auth
NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# Firebase (for migration period only)
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Emulator Suite (Optional - local development only)
VITE_USE_FIREBASE_EMULATORS=false

# Smart Notes Gemini direct API access
VITE_GEMINI_API_KEY=your_gemini_api_key

# Firebase App Check with reCAPTCHA v3 (Optional but recommended)
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Sentry Error Tracking (Optional but recommended for production)
# Get your DSN from https://sentry.io/settings/[your-org]/projects/[your-project]/keys/
VITE_SENTRY_DSN=https://your_public_key@your_org_id.ingest.sentry.io/your_project_id

# Sentry CI/CD Configuration (Optional - for automated deployments)
# Auth token for uploading source maps (CI/CD only)
# SENTRY_AUTH_TOKEN=your_auth_token
# SENTRY_ORG=your_org_name
# SENTRY_PROJECT=your_project_name

# Development
NODE_ENV="development"
